<h1><%= @book.title %></h1>

<p><%= link_to image_tag(@book.cover, :border => 0), cart_items_path(:book_id => @book), :method => :post %></p>
<p>Author(s): <%= @book.author %></p>
<p>Price: <%= number_to_currency(@book.price, :unit => "$ ") %></p>
<p>ISBN: <%= @book.isbn %></p>
<p>Edition: <%= @book.edition %></p>
<p>Copyright Year: <%= @book.copy_right_year %></p>
<p>Description: <%= @book.description %></p>

<p><%= link_to "Book Listing", "/" %> <%= button_to "Add to Cart", cart_items_path(:book_id => @book) %></p>
